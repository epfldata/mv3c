<?xml version="1.0" encoding="UTF-8"?>
<configuration strict="true" status="OFF" monitorInterval="30">

    <appenders>
        <appender type="Console" name="STDOUT">
            <layout type="PatternLayout" pattern="%d %p %C{1.} [%t] %m%n %ex"/>
        </appender>
    </appenders>

    <loggers>
        <logger name="ddbt.tpcc" level="INFO" />
        <logger name="ddbt.tpcc.loadtest" level="INFO" />
        <logger name="ddbt.tpcc.mtx" level="INFO" />
        <logger name="ddbt.tpcc.tx" level="INFO" />
        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>

    </loggers>

</configuration>
